<% provide(:title, "Project | #{@project.title}") %>

<p id="notice"><%= notice %></p>

<div class="page-title">
  <div class="title_left">
    <h3>Project :  <small><%= @project.title %></small></h3>
  </div>

  <div class="title_right">
    <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
      <div class="input-group">
        <input type="text" class="form-control" placeholder="Search for...">
        <span class="input-group-btn">
          <button class="btn btn-default" type="button">Go!</button>
        </span>
      </div>
    </div>
  </div>
</div>

<div class="clearfix"></div>

<div class="row">
  <div class="col-md-12">
    <div class="x_panel">
      <div class="x_title">
        <h2>Project <small>manage your data and analysis</small></h2>
        <ul class="nav navbar-right panel_toolbox">
          <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
          </li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
          </li>
          <li><a class="close-link"><i class="fa fa-close"></i></a>
          </li>
        </ul>
        <div class="clearfix"></div>
      </div>
      <div class="x_content">

        <section class="content invoice">
          <!-- title row -->
          <div class="row">
            <div class="col-xs-12 invoice-header">
              <h1>
                <i class="fa fa-desktop"></i> <%= @project.title %>
                <small class="pull-right">Date: 16/08/2016</small>
              </h1>
            </div>
            <!-- /.col -->
          </div>
          <!-- info row -->
          <div class="clearfix"></div>
          <div class="row">
            <div class="col-sm-12 invoice-header">
              <p>
                <%= @project.description %>
              </p>
            </div>
            <!-- /.col -->
          </div>
          <!-- /.row -->
          <div class="clearfix"></div>
          <!-- Table row -->
          <div class="row">
            <div class="col-xs-12 table">
              <table class="table table-striped">
                <thead>
                  <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th>Content </th>
                    <th>Type</th>
                    <th>Command</th>
                  </tr>
                </thead>
                <tbody>
                <% @data.each do |datum| %>
                  <tr>
                    <td><%= datum.id %></td>
                    <td><%= datum.name %></td>
                    <td><pre><%= datum.content %></pre></td>
                    <td><%= datum.data_type %></td>
                    <td><%= link_to 'Show', project_datum_path(@project, datum.id), :class => "btn btn-sm btn-primary" %>
                    <%= link_to 'Edit', edit_project_datum_path(@project, datum), :class => "btn btn-sm btn-warning" %></td>
                  </tr>
                <% end %>
                </tbody>
              </table>
            </div>
            <!-- /.col -->
          </div>
          <!-- /.row -->
          <!-- this row will not appear when printing -->
          <div class="row no-print">
            <div class="col-xs-12">
              <%= link_to '<i class="fa fa-arrow-left"></i> Back'.html_safe, projects_path , :class => "btn btn-primary pull-right" %>     
              <%= link_to '<i class="fa fa-file"></i> New Data'.html_safe , new_project_datum_path(@project) , :class => "btn btn-success pull-right", :style => "margin-right: 5px;" %>
            </div>
          </div>
          
          
        </section>
      </div>
    </div>
  </div>
</div>
